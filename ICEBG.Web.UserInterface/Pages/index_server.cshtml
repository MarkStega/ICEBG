@page "/index_server"
@namespace ICEBG.Web.UserInterface.Pages
@using ICEBG.Client
@using ICEBG.Web.UserInterface
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject NonceService NonceService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ICEBG (UserInterface - Server)</title>

    <base href="~/" />

    <link href="_content/Material.Blazor/material.blazor.min.css" rel="stylesheet" />

    <link href="_content/ICEBG.Client/images/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <link href="_content/ICEBG.Client/images/favicon.ico" rel="icon" type="image/x-icon">

    <link href="_content/ICEBG.Client/css/icebg.min.css" rel="stylesheet" />

</head>

<body>
    <!-- SSE -->
    <component type="typeof(App)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script nonce="@NonceService.nonceValue" src="_framework/blazor.server.js"></script>
    @*    <script nonce="@NonceService.nonceValue" src="_content/GoogleAnalytics.Blazor/googleanalytics.blazor.js"></script>*@
    <script nonce="@NonceService.nonceValue" src="_content/Material.Blazor/material.blazor.min.js"></script>

</body>
</html>
