@namespace ICEBG.Client.Components

<h1>Time is @time</h1>
@if (configuration == null)
{
    <h2>Loading...</h2>
}
else
{
    @if (configuration.pSuccess)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Success</th>
                    <th>Key</th>
                    <th>pResult</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>true</td>
                    <td>@configuration.pResult.Id</td>
                    <td>@configuration.pResult.Configuration</td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Success</th>
                    <th>pError</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>false</td>
                    <td>@configuration.pError</td>
                </tr>
            </tbody>
        </table>
    }
}
